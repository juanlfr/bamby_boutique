<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <br><br><br>
            <h1 class="h3 mb-3 font-weight-normal text-center">Editer mon compte </h1>
            <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
            <%= resource_name.to_s.humanize %>

            <%= render "devise/shared/error_messages", resource: resource%>

            <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <br/>
            <div class="form-group">
                <%= f.label :password %> <i>(laisser vide si vous ne voulez pas le modifier)</i><br/>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> charactères minimum</em>
                <% end %>
            </div>
            <br/>
            <div class="field">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
            <br/>
            <div class="field">
                <%= f.label :current_password %> <i>(veuillez indiquer votre mot de passe actuel)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            </div>
            <br/>
            <div class="actions mt-4 d-flex justify-content-center">
                <%= f.submit "Modifier mon mot de passe", class: "btn btn-lg btn-primary" %>
              </div>
            <div class="actions mt-4 d-flex justify-content-center">
                <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Vous êtes sûr ?" }, method: :delete, class: "form-control",class: "btn btn-lg btn-danger" %>
            </div>
            <% end %>
            <br/>
            <div class="form-group">
                <%= link_to "Back", :back%><br/>
                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</div>
