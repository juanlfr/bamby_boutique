            </div>
            <br>
            <h4 class="h4 mb-3 font-weight-normal text-center"> Ou</h4>
            <div class="d-flex justify-content-center">
                <a href="/devise/sign_in">Se connecter</a> &nbsp;
            </div>
            <div class="d-flex justify-content-center">
                <a href="/devise/sign_up">S'inscrire</a>
            </div>
            <% end %>
        </div>
    </div>
